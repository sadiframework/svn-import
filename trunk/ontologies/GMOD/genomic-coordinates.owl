<?xml version="1.0"?>


<!DOCTYPE rdf:RDF [
    <!ENTITY SO "http://purl.org/obo/owl/SO#" >
    <!ENTITY owl "http://www.w3.org/2002/07/owl#" >
    <!ENTITY xsd "http://www.w3.org/2001/XMLSchema#" >
    <!ENTITY resource "http://semanticscience.org/resource/" >
    <!ENTITY rdfs "http://www.w3.org/2000/01/rdf-schema#" >
    <!ENTITY rdf "http://www.w3.org/1999/02/22-rdf-syntax-ns#" >
    <!ENTITY properties "http://sadiframework.org/ontologies/properties.owl#" >
]>

<!-- Author: Ben Vandervalk -->

<rdf:RDF
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:sio="http://semanticscience.org/resource/"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:properties="http://sadiframework.org/ontologies/properties.owl#"
     xmlns:SO="http://purl.org/obo/owl/SO#">

    <owl:Ontology rdf:about="">
        <owl:imports rdf:resource="http://purl.org/obo/owl/sequence"/>
        <owl:imports rdf:resource="http://sadiframework.org/ontologies/properties.owl"/>
    </owl:Ontology>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Object Properties
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <owl:ObjectProperty rdf:about="#is-relative-to">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000061"/> <!-- 'is located in' -->
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#end-position">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' -->
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#start-position">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' --> 
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#strand">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' --> 
    </owl:ObjectProperty>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Classes
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <owl:Class rdf:about="#GenomicRegion">
        <owl:equivalentClass>
            <owl:Class>
                <owl:intersectionOf rdf:parseType="Collection">
                    <owl:Restriction>
                        <owl:onProperty rdf:resource="#is-relative-to"/>
                        <owl:someValuesFrom rdf:resource="#FeatureWithIdentifier"/>
                    </owl:Restriction>
                    <owl:Restriction>
                        <owl:onProperty rdf:resource="#start-position"/>
                        <owl:someValuesFrom rdf:resource="&sio;SIO_000071"/> <!--'coordinate' -->
                    </owl:Restriction>
                    <owl:Restriction>
                        <owl:onProperty rdf:resource="#end-position"/>
                        <owl:someValuesFrom rdf:resource="&sio;SIO_000071"/> <!-- 'coordinate' -->
                    </owl:Restriction>
                    <!-- note: possible values for stand: +1 (positive strand), -1 (negative strand), 0 (strand unknown or irrelevant) -->
                    <owl:Restriction>
                        <owl:onProperty rdf:resource="#strand"/>
                        <owl:someValuesFrom rdf:resource="&sio;SIO_000366"/> <!-- 'number' -->
                    </owl:Restriction>
                 </owl:intersectionOf>
            </owl:Class>
        </owl:equivalentClass>
    </owl:Class>
    
    <owl:Class rdf:about="FeatureWithIdentifier">
        <owl:equivalentClass>
            <owl:Restriction>
                <owl:onProperty rdf:resource="&sio;000008"/>  <!-- 'has attribute' -->
                <owl:someValuesFrom rdf:resource="&sio;000115"/> <!-- 'identifier' -->
            </owl:Restriction>
        </owl:equivalentClass>
        <rdfs:subClassOf rdf:resource="&SO;SO_0000110"/>
    </owl:Class>

</rdf:RDF>

