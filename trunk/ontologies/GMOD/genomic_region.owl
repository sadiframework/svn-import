<?xml version="1.0"?>

<!DOCTYPE rdf:RDF [
    <!ENTITY SO "http://purl.org/obo/owl/SO#" >
    <!ENTITY owl "http://www.w3.org/2002/07/owl#" >
    <!ENTITY xsd "http://www.w3.org/2001/XMLSchema#" >
    <!ENTITY sio "http://semanticscience.org/resource/" >
    <!ENTITY lsrn "http://purl.oclc.org/SADI/LSRN/" >
    <!ENTITY assembly "http://sadiframework.org/ontologies/GMOD/genome_assembly.owl#" >
    <!ENTITY rdfs "http://www.w3.org/2000/01/rdf-schema#" >
    <!ENTITY rdf "http://www.w3.org/1999/02/22-rdf-syntax-ns#" >
    <!ENTITY properties "http://sadiframework.org/ontologies/properties.owl#" >
]>

<rdf:RDF
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:sio="http://semanticscience.org/resource/"
     xmlns:lsrn="http://purl.oclc.org/SADI/LSRN/"
     xmlns:assembly="http://sadiframework.org/ontologies/GMOD/genome_assembly.owl#"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:properties="http://sadiframework.org/ontologies/properties.owl#"
     xmlns:SO="http://purl.org/obo/owl/SO#">

    <owl:Ontology rdf:about="">
        <owl:imports rdf:resource="http://sadiframework.org/ontologies/GMOD/genome_assembly.owl#"/>
        <owl:imports rdf:resource="http://purl.org/obo/owl/sequence"/>
        <owl:imports rdf:resource="http://sadiframework.org/ontologies/properties.owl"/>
    </owl:Ontology>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Object Properties
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <owl:ObjectProperty rdf:about="#is-relative-to">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000061"/> <!-- 'is located in' -->
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#end-position">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' -->
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#start-position">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' --> 
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="#strand">
        <rdfs:subPropertyOf rdf:resource="&sio;SIO_000008"/> <!-- 'has attribute' --> 
    </owl:ObjectProperty>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Classes
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <owl:Class rdf:about="#GenomicRegion">
        <owl:equivalentClass>
            <owl:Class>
                <owl:intersectionOf rdf:parseType="Collection">
                    <owl:Restriction>
                        <!--
                            The genomic coordinates (start,end,strand) are relative to to this feature
                        -->
                        <owl:onProperty rdf:resource="#is-relative-to"/>
                        <owl:someValuesFrom rdf:resource="#Feature"/>
                    </owl:Restriction>
                    <owl:Restriction>
                        <!-- 
                            The genome assembly that contains this region 
                        -->
                        <owl:onProperty rdf:resource="&sio;SIO_000061"/> <!-- 'is located in' -->
                        <owl:someValuesFrom rdf:resource="&assembly;GenomeAssembly"/>
                    </owl:Restriction>
                     <owl:Restriction>
                        <!-- 
                            Optional. No start-position means the region starts with the first base/amino acid of the reference feature 
                        -->
                        <!-- <owl:someValuesFrom rdf:resource="&sio;SIO_000613"/> --> <!-- 'ordinal number' -->
                        <owl:onProperty rdf:resource="#start-position"/>
                        <owl:minCardinality>0</owl:minCardinality>
                    </owl:Restriction>
                    <owl:Restriction>
                        <!-- 
                            Optional. No end-position means the region ends with the last base/amino acid of the reference feature 
                        -->
                        <!-- <owl:someValuesFrom rdf:resource="&sio;SIO_000613"/> --> <!-- 'ordinal number' -->
                        <owl:onProperty rdf:resource="#end-position"/>
                        <owl:minCardinality>0</owl:minCardinality>
                    </owl:Restriction>
                    <owl:Restriction>
                        <!-- 
                            Optional. Possible values are: 
                            
                            +1 (positive strand), 
                            -1 (negative strand),
                             0 (relevant, but unknown)
                        
                            If no strand value is given, it means that the strand
                            is not applicable for describing the location of the
                            feature.  For example, it makes no sense to indicate 
                            a strand when describing the location of a motif within a protein.
                        -->
                        <owl:onProperty rdf:resource="#strand"/>
                        <owl:minCardinality>0</owl:minCardinality>
                    </owl:Restriction>
                 </owl:intersectionOf>
            </owl:Class>
        </owl:equivalentClass>
    </owl:Class>
    
</rdf:RDF>

