<project 
 xmlns="http://maven.apache.org/POM/4.0.0" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.wilkinsonlab.sadi</groupId>
  <artifactId>sadi-parent</artifactId>
  <version>0.2.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>SADI parent POM</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  <licenses>
    <license>
      <name>New BSD License</name>
      <url>http://www.opensource.org/licenses/bsd-license.php</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <url>http://code.google.com/p/sadi/source/browse/#svn%2Ftrunk%2Fsadi.parent</url>
    <connection>http://sadi.googlecode.com/svn/trunk/sadi.parent</connection>
    <developerConnection>https://sadi.googlecode.com/svn/trunk/sadi.parent</developerConnection>
  </scm>
  <issueManagement>
  	<system>Google Code</system>
  	<url>http://code.google.com/p/sadi/issues/</url>
  </issueManagement>
  <mailingLists>
    <mailingList>
      <name>User List</name>
      <subscribe>http://groups.google.com/group/sadi-discuss/subscribe</subscribe>
      <unsubscribe>http://groups.google.com/group/sadi-discuss/subscribe</unsubscribe>
      <post>sadi-discuss@googlegroups.com</post>
      <archive>http://groups.google.com/group/sadi-discuss</archive>
    </mailingList>
    <mailingList>
      <name>Developer List</name>
      <subscribe>http://groups.google.com/group/sadi-dev/subscribe</subscribe>
      <unsubscribe>http://groups.google.com/group/sadi-dev/subscribe</unsubscribe>
      <post>sadi-dev@googlegroups.com</post>
      <archive>http://groups.google.com/group/sadi-dev</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>luke</id>
      <name>Luke McCarthy</name>
      <email>mccarthy@elmonline.ca</email>
    </developer>
    <developer>
      <id>benv</id>
      <name>Ben Vandervalk</name>
      <email>ben.vvalk@gmail.com</email>
    </developer>
  </developers>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-source</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <executions>
          <execution>
            <id>attach-javadoc</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.7.1</version>
        <configuration>
          <excludes>
            <exclude>ca/wilkinsonlab/sadi/test/*,ca/wilkinsonlab/sadi/test/it/*</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh-external</artifactId>
        <version>1.0-alpha-5</version>
      </extension>
    </extensions>
  </build>
  <distributionManagement>
    <repository>
      <id>dev-repository</id>
      <name>dev.biordf.net Repository</name>
      <url>scpexe://dev.biordf.net/var/www/maven/</url>
    </repository>
    <snapshotRepository>
      <id>dev-snapshot-repository</id>
      <name>dev.biordf.net Snapshot Repository</name>
      <url>scpexe://dev.biordf.net/var/www/maven/</url>
    </snapshotRepository>
  </distributionManagement>
  <repositories>
  	<repository>
  		<id>dev.biordf.net</id>
  		<name>dev.biordf.net</name>
  		<url>http://dev.biordf.net/maven</url>
  	</repository>
  </repositories>
</project>