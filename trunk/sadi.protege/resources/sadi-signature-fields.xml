        key="Provider"
        icon="" />
    <DefinitionField
        label="definition_service_type"
        type="droptext"
        id="ServiceType"
        index="8"
        required="false"
        helpText="definition_service_type_help"
        key="ServiceType"
        icon="" />
    <DefinitionField
        label="definition_authoritative"
        type="bool"
        id="Authoritative"
        index="9"
        required="false"
        helpText="definition_authoritative_help"
        key="Authoritative"
        icon="" />
</DefinitionFields>