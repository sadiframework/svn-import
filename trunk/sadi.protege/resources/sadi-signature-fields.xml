<?xml version="1.0" encoding="utf-8"?>
<DefinitionFields>
<!-- DefinitionField:
    * label    - a key in the resource bundle that has an appropriate value for the label field
    * type     - one of text | droptext | bool
    * id       - unique id for the definition field
    * index    - the index of the where this field belongs
    * required - true if a mandatory field, false otherwise
    * helpText - a key in the resource bundle that has an appropriate value for the help text
    * key      - unique key field
    * icon     - optional icon to use
 -->
    <DefinitionField
        label="definition_name"
        type="text"
        id="ServiceName"
        index="1"
        required="true"
        helpText="definition_name_help"
        key="ServiceName"
        icon="" />
