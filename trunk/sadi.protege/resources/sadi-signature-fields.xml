        id="InputClass"
        index="3"
        required="true"
        helpText="definition_input_class_help"
        key="InputClass"
        icon="" />
    <DefinitionField
        label="definition_output_class"
        type="droptext"
        id="OutputClass"
        index="4"
        required="true"
        helpText="definition_output_class_help"
        key="OutputClass"
        icon="" />
    <DefinitionField
        label="definition_endpoint"
        type="text"
        id="URL"
        index="5"
        required="false"
        helpText="definition_endpoint_help"
        key="URL"
        icon="" />
    <DefinitionField
        label="definition_authority"
        type="text"
        id="Authority"
        index="6"
        required="true"
        helpText="definition_authority_help"
        key="Authority"
        icon="" />
    <DefinitionField
        label="definition_provider"
        type="text"
